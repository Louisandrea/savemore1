<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true">


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_margin="15dp"
            android:id="@+id/circle"
            android:layout_width="260dp"
            android:background="@drawable/circle_view"
            android:layout_centerHorizontal="true"
            android:layout_height="260dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/title"
                    android:width="150dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="DISNEY TRIP $500"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="15dp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/descriptionSave"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Visit Disney Land during Christmas"/>

            </LinearLayout>


        </RelativeLayout>


        <View
            android:id="@+id/divider"
            android:layout_below="@+id/circle"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffcc52"/>

        <LinearLayout
            android:id="@+id/progress_layout"
            android:layout_width="match_parent"
            android:layout_below="@+id/divider"
            android:background="@drawable/outer_progress"
            android:padding="10dp"
            android:layout_height="45dp"
            android:weightSum="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_alignParentEnd="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/divider"
                android:background="@drawable/inner_progress"
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_height="25dp"
                android:layout_weight="1.55">

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_weight="9"
                    android:layout_height="15dp"
                    android:progress="40"
                    android:progressDrawable="@drawable/progress_bar"
                    android:id="@+id/progressBar" />

                <TextView
                    android:id="@+id/percentage"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="40%"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>


        <EditText
            android:layout_width="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/update"
            android:layout_above="@+id/update_amount"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/update_amount"
            android:background="@drawable/big_circle"
            android:text="Update latest amount"
            android:padding="15dp"
            android:textColor="#FFFFFF"
            android:layout_width="200dp"
            android:textSize="10sp"
            android:layout_height="40dp"
            android:layout_marginBottom="15dp"
            android:layout_above="@+id/btn_back"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@null"
            android:text="@string/btn_back"
            android:textColor="#4E342E"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp" />


    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/menu"/>

</android.support.v4.widget.DrawerLayout>